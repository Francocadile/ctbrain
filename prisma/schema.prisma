// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String?   @unique
  password  String?
  role      Role      @default(JUGADOR)
  sessions  Session[] @relation("SessionCreatedBy")
  attending Session[] @relation("SessionPlayers", references: [id])
}

model Session {
  id          String   @id @default(cuid())
  title       String
  description String?
  date        DateTime
  createdBy   User     @relation("SessionCreatedBy", fields: [createdById], references: [id])
  createdById String

  players     User[]   @relation("SessionPlayers")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  ADMIN
  CT
  MEDICO
  JUGADOR
  DIRECTIVO
}

