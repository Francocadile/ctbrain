// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String?   @unique
  password  String?
  role      Role      @default(JUGADOR)

  // timestamps
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt @default(now()) // <-- clave para migrar con datos existentes

  // Sesiones creadas por este usuario (CT)
  sessions  Session[] @relation("SessionCreatedBy")

  // Sesiones a las que asiste (N:N implícita con Session.players)
  attending Session[] @relation("SessionPlayers")
}

model Session {
  id          String   @id @default(cuid())
  title       String
  description String?
  date        DateTime

  // Creador (CT)
  createdBy   User     @relation("SessionCreatedBy", fields: [createdById], references: [id])
  createdById String

  // Jugadores asignados (N:N implícita con User.attending)
  players     User[]   @relation("SessionPlayers")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt @default(now())
}

enum Role {
  ADMIN
  CT
  MEDICO
  JUGADOR
  DIRECTIVO
}
