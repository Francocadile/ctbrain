generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CT
  MEDICO
  JUGADOR
  DIRECTIVO
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  role      Role      @default(JUGADOR)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relación inversa: sesiones creadas por este usuario (CT/Admin)
  sessions  Session[]
}

/**
 * NOTA ENUM:
 * Incluye TUS valores (GENERAL, FUERZA, TACTICA, AEROBICO, RECUPERACION)
 * y también los que pudiste haber creado en la migración previa
 * (PARTIDO, TACTICO, EVALUACION, LIBRE), para evitar desincronizaciones
 * con el tipo ya existente en la DB.
 */
enum SessionType {
  GENERAL
  FUERZA
  TACTICA
  AEROBICO
  RECUPERACION
  // Compatibilidad con migración previa
  PARTIDO
  TACTICO
  EVALUACION
  LIBRE
}

model Session {
  id          String       @id @default(cuid())
  title       String
  description String?      @db.Text
  date        DateTime
  type        SessionType  @default(GENERAL)

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Creador (userId)
  createdBy   String
  user        User         @relation(fields: [createdBy], references: [id], onDelete: Cascade)

  @@index([date])
  @@index([type])
  @@index([createdBy])
}
